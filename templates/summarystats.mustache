            <tr> <td>{{#str}}stats_cefrlevel, mod_solo{{/str}}</td><td>{{s.cefrlevel}}</td></tr>
            <tr> <td>{{#str}}stats_relevance, mod_solo{{/str}}</td><td>{{s.relevance}}</td></tr>
            <tr> <td>{{#str}}stats_wpm, mod_solo{{/str}}</td><td>{{s.wpm}}</td></tr>
          </tbody>
        </table>
    </div>
</div>