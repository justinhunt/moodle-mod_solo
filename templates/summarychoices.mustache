{{! The opening of the section element is both at the summaryheader.mustache file and the summaryuserattemptheader.mustache}}   
    <div class="mod_solo_report_card_content">
        <div class="mod_solo_summarychoices">

            <div class="mod_solo_summarychoices_group">

                {{^textonlysubmission}}
                <div>
                    <h5>{{#str}}targetspeakingtime, mod_solo{{/str}}</h5>
                    <p>{{#str}}xminutes , mod_solo, {{convlength}}{{/str}}</p>
                </div>
                {{/textonlysubmission}}

                {{#hastargetwords}}
                <div class="mod_solo_summarychoices_group_target_words">
                    <h5>{{#str}}targetwords , mod_solo{{/str}}</h5>
                    <div>
                        {{#targetwords}}
                        <span>{{.}}</span>
                        {{/targetwords}}
                        
                    </div>
                </div>
                {{/hastargetwords}}

                <div class="mod_solo_summarychoices_group_attempt_number">
                    {{#attemptnumber}}
                    <h5>{{#str}}attemptnumberheader, mod_solo{{/str}}</h5>
                    <p>{{#str}}attemptnumber, mod_solo, {{attemptnumber}}{{/str}}</p>
                    {{/attemptnumber}}
                </div>
            </div>

            <div class="mod_solo_summarychoices_group">
                <div>
                    <h5>{{#str}}topic , mod_solo{{/str}}</h5>
                    <p>{{speakingtopic}}</p>
                </div>
            </div>

        </div>
    </div>
</section> 