<a id="{{uniqid}}_showttspassagebtn" class="btn mod_solo_showttspassagebtn" href="#">{{#str}}showttspassage, mod_solo{{/str}}</a>
<div class="solo_ttspassageplayer container"  id="{{uniqid}}_ttspassageplayer" data-token="{{token}}" data-ttslanguage="{{ttslanguage}}" data-region="{{region}}" data-cloudpoodllurl="{{cloudpoodllurl}}" style="display: none;">
    <button type='button' id='{{uniqid}}_ttspassagebutton' data-currentsentence="0" class="passage-audio-player">
        <audio id='{{uniqid}}_ttspassageaudio' class="passageaudio nomediaplugin">
        </audio>
        <i class="fa fa-volume-up" aria-hidden="true"></i>
    </button>
    <div id='{{uniqid}}_ttssentence_spinner' style="display: none; text-align: center">
        <i class="fa fa-spinner fa-xl fa-spin"></i>
    </div>
    <div id='{{uniqid}}_ttssentencecont' >
        <div class='tbr_innerdiv {{rtl}}'>
        </div>
    </div>
</div>
{{^element.frozen}}
    {{#js}}
        require(['jquery', 'mod_solo/ttspassage'], function($, ttspassage) {
            ttspassage.init('{{uniqid}}');
        });
    {{/js}}
{{/element.frozen}}