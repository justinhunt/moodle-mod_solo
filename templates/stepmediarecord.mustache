
{{! we set the base form fields common to each step}}
{{>mod_solo/stepbase}}

{{! we set the title and instructions}}
<div class="container mod_solo_step_record">

    <div class="row">
        <div class="col-sm mx-auto"> 
            <span class="mod_solo_step_title_eyebrow">Step {{stepno}}</span>
            <h2 class="mod_solo_step_title">
            {{#str}}attempt_record, mod_solo{{/str}}
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 mx-auto">
            <div class="solo_stepinstructions">
                {{^posttranscribing}}
                    {{#str}}step_mediarecordinstructions, mod_solo{{/str}}
                {{/posttranscribing}}
                {{#posttranscribing}}
                    {{#str}}step_posttranscriberecordinstructions, mod_solo{{/str}}
                {{/posttranscribing}}
            </div>
        </div>
    </div>

    {{^posttranscribing}}
        {{! Audio recorder }}
        {{>mod_solo/audiorecorder}}

        <!-- the topic and goals -->
        {{>mod_solo/stepprompt}}

        {{! Activity media }}
        <div class="mod_solo_activitycontent_container">
            {{#contentitems}}
                {{>mod_solo/activitycontent}}
            {{/contentitems}}
        </div>
    {{/posttranscribing}}

    {{#posttranscribing}}
        {{#selftranscript}}
            <div class="row">
                <div class="col-sm">
                    <div class="card">
                        <div class="card-header">
                            {{#str}}selftranscript, mod_solo{{/str}}
                        </div>
                        <div class="card-body">
                            <div class="mod_solo_audiorec_selftranscript_plain">
                                {{selftranscript}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/selftranscript}}

        {{! Audio recorder }}
        {{>mod_solo/audiorecorder}}
    {{/posttranscribing}}


    {{! Submit }}
    <div class="mx-auto">
        <!-- upload warning -->
        <div class="mod_solo_uploadwarning" style="display: none">
            {{#str}}uploading, mod_solo{{/str}}<br>
            <i class="fa fa-spinner fa-spin fa-3x"></i>
        </div>

        {{! Submit button is no needed as when the recorder is stopped by the user the audio file uploads and the router automatically sends him to the next step. }}
        <!--button class="btn btn-primary btn-lg mod_solo_step2_btn" id="{{uniqid}}_button" type="button">Submit</button-->
    </div>

</div>
{{^element.frozen}}
    {{#js}}
        //this submits the form data by ajax

        require(['jquery', 'core/log','core/notification' ,'core/ajax','core/templates'],
            function($, log, Notification, Ajax, Templates) {
                $('#' + '{{uniqid}}_button').click(function(){
                    var data = {};
                    data.filename = $('#' + '{{rec.widgetid}}_filename').val();
                    data.attemptid ={{attemptid}};
                    data.activitytype = 2; // {{type}}
                    var cmid={{rec.cmid}};
                    var id={{id}};
                    var step={{stepno}};
                    var action = 'submitstep';

                   var ret = Ajax.call([{
                        methodname: 'mod_solo_submit_step',
                        args: {
                            cmid: cmid,
                            step: step,
                            action: action,
                            data: JSON.stringify(data)
                        },
                        done:  function(a){window.location='{{{nexturl}}}';},
                        fail: Notification.exception,
                   }]);

                });
            }
        );
    {{/js}}
{{/element.frozen}}